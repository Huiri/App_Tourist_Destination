<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundimg">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="오늘 하루 \n 떠나보는 건 어떤가요?"
        android:fontFamily="@font/chosuncentennial_otf"
        android:textColor="@color/white"
        android:textSize="37sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tour"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="58dp"
        android:onClick="btnClick"
        android:text="여행지"
        android:fontFamily="@font/kopubworld_batangpro_medium"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <Button
        android:id="@+id/restaurant"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="맛집"
        android:fontFamily="@font/kopubworld_batangpro_medium"
        android:textSize="20sp"
        android:onClick="btnClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tour"/>

    <Button
        android:id="@+id/hotel"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="숙소"
        android:onClick="btnClick"
        android:textSize="20sp"
        android:fontFamily="@font/kopubworld_batangpro_medium"
        app:layout_constraintTop_toBottomOf="@+id/restaurant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지친 당신을 위한 휴식이 필요하니까요"
        android:textSize="16dp"
        android:textColor="@color/grey"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/hotel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/ridibatang"/>

</androidx.constraintlayout.widget.ConstraintLayout>